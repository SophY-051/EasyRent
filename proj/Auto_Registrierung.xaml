<mah:MetroWindow x:Class="EasyRentProj.Auto_Registrierung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRentProj"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="EasyRent Auto Registrierung" Height="450" Width="800">
    <Grid>
        <Label Content="Auto ID" HorizontalAlignment="Left" Height="26" Margin="32,62,0,0" VerticalAlignment="Top" Width="59"/>
        <Label Content="Marke" HorizontalAlignment="Left" Height="27" Margin="32,93,0,0" VerticalAlignment="Top" Width="58"/>
        <Label Content="Model" HorizontalAlignment="Left" Height="28" Margin="32,125,0,0" VerticalAlignment="Top" Width="59"/>
        <Label Content="Getriebe" HorizontalAlignment="Left" Margin="32,158,0,0" VerticalAlignment="Top" Width="59"/>
        <Label  Content="Sitze" HorizontalAlignment="Left" Margin="32,189,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="0.07,0.437"/>
        <Label Content="Preis" HorizontalAlignment="Left" Height="27" Margin="33,220,0,0" VerticalAlignment="Top" Width="57"/>
        <TextBox x:Name="tbAutoMarke" HorizontalAlignment="Left" Height="24" Margin="107,94,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="99" RenderTransformOrigin="-0.335,0.43"/>
        <TextBox x:Name="tbAutoModel" HorizontalAlignment="Left" Height="14" Margin="107,126,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98" />
        <TextBox x:Name="tbGetriebe" HorizontalAlignment="Left" Height="13" Margin="107,158,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="tbSitze" HorizontalAlignment="Left" Margin="107,189,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="tbPreis" HorizontalAlignment="Left" Height="14" Margin="107,221,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98" />
        <!-- Button Content="Auto hinzufügen" Click="bAutoHinzufuegen" HorizontalAlignment="Left" Height="11" Margin="37,266,0,0" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.523,1.269"/> 
         <Button Content="Aktualisieren" Click="bDatenAktualisieren" HorizontalAlignment="Left" Height="19" Margin="38,301,0,0" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.523,1.269"/> -->
        <DataGrid x:Name="CarRegGridXAML" Margin="280,59,10,111">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Preis" Binding= "{Binding autoPreis}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="Marke" Binding="{Binding autoMarke}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="Model" Binding= "{Binding autoModel}" Width="110"></DataGridTextColumn>
                <DataGridTextColumn Header="Getriebe" Binding= "{Binding autoGetriebe}" Width="85"></DataGridTextColumn>
                <DataGridTextColumn Header="Sitze" Binding= "{Binding autoSitze}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="ID" Binding= "{Binding autoID}" Width="60"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>




    </Grid>
</mah:MetroWindow>
