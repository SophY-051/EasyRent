<mah:MetroWindow x:Class="EasyRentProj.Auto_Registrierung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRentProj"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="EasyRent Auto Registrierung" Height="450" Width="800">
    <Grid>
        <Label Content="Auto Registrierungsnummer" HorizontalAlignment="Left" Height="36" Margin="146,101,0,0" VerticalAlignment="Top" Width="177"/>
        <Label Content="Marke" HorizontalAlignment="Left" Height="27" Margin="146,142,0,0" VerticalAlignment="Top" Width="52"/>
        <Label Content="Model" HorizontalAlignment="Left" Height="27" Margin="146,174,0,0" VerticalAlignment="Top" Width="52"/>
        <Label Content="Verfügbar" HorizontalAlignment="Left" Height="27" Margin="146,217,0,0" VerticalAlignment="Top" Width="104"/>
        <TextBox x:Name="tbAutoMarke" HorizontalAlignment="Left" Height="24" Margin="198,142,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="99" RenderTransformOrigin="-0.335,0.43"/>
        <TextBox x:Name="tbAutoModel" HorizontalAlignment="Left" Height="14" Margin="198,174,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="99" TextChanged="TextBox_TextChanged"/>
        <Button Content="Neues Auto hinzufügen" Click="bAddCar" HorizontalAlignment="Left" Height="45" Margin="146,249,0,0" VerticalAlignment="Top" Width="151" RenderTransformOrigin="0.523,1.269"/>
        <Button Content="Liste aktualisieren" Click="bRefreshList" HorizontalAlignment="Left" Height="44" Margin="146,299,0,0" VerticalAlignment="Top" Width="151" RenderTransformOrigin="0.523,1.269"/>
        <mah:HamburgerMenuListBox> </mah:HamburgerMenuListBox>  
    </Grid>
</mah:MetroWindow>
