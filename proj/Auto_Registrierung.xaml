<mah:MetroWindow x:Class="EasyRentProj.Auto_Registrierung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRentProj"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="EasyRent Auto Registrierung" Height="450" Width="800">
    <Grid>
        <Label Content="Auto ID" HorizontalAlignment="Left" Height="36" Margin="35,44,0,0" VerticalAlignment="Top" Width="176"/>
        <Label Content="Marke" HorizontalAlignment="Left" Height="27" Margin="35,80,0,0" VerticalAlignment="Top" Width="52"/>
        <Label Content="Model" HorizontalAlignment="Left" Height="27" Margin="35,112,0,0" VerticalAlignment="Top" Width="52"/>
        <Label Content="Preis" HorizontalAlignment="Left" Height="27" Margin="38,207,0,0" VerticalAlignment="Top" Width="49"/>
        <TextBox x:Name="tbAutoMarke" HorizontalAlignment="Left" Height="24" Margin="89,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="99" RenderTransformOrigin="-0.335,0.43"/>
        <TextBox x:Name="tbAutoModel" HorizontalAlignment="Left" Height="14" Margin="92,113,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="99" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="tbPreis" HorizontalAlignment="Left" Height="14" Margin="93,145,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98" TextChanged="TextBox_TextChanged"/>
        <Button Content="Auto hinzufügen" Click="bAutoHinzufuegen" HorizontalAlignment="Left" Height="11" Margin="35,239,0,0" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.523,1.269"/>
        <Button Content="Aktualisieren" Click="bDatenAktualisieren" HorizontalAlignment="Left" Height="19" Margin="67,323,0,0" VerticalAlignment="Top" Width="168" RenderTransformOrigin="0.523,1.269"/>
        <DataGrid x:Name="CarRegGridXAML" Margin="546,46,20,46">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Preis" Width="90"></DataGridTextColumn>
                <DataGridTextColumn Header="Marke" Width="90"></DataGridTextColumn>
                <DataGridTextColumn Header="Model" Width="90"></DataGridTextColumn>
                <DataGridTextColumn Header="Getriebe" Width="90"></DataGridTextColumn>
                <DataGridTextColumn Header="Sitze" Width="90"></DataGridTextColumn>
                <DataGridTextColumn Header="Auto ID" Width="90"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</mah:MetroWindow>
