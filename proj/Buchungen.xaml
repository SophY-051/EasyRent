<mah:MetroWindow  x:Class="EasyRentProj.Buchungen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRentProj"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="EasyRent Buchungen" Height="1080" Width="1920"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Kunde Name" HorizontalAlignment="Left" Height="28" Margin="167,202,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Start Datum" HorizontalAlignment="Left" Height="28" Margin="167,291,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="End Datum" HorizontalAlignment="Left" Height="28" Margin="167,390,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Gesamt Preis" HorizontalAlignment="Left" Height="28" Margin="167,473,0,0" VerticalAlignment="Top" Width="100"/>

        <DatePicker x:Name="dpStartDatum" HorizontalAlignment="Left" Height="46" Margin="282,291,0,0" VerticalAlignment="Top" Width="160"/>
        <DatePicker x:Name="dpEndDatum" HorizontalAlignment="Left" Height="46" Margin="282,390,0,0" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="tbGesamtPreis" HorizontalAlignment="Left" Height="46" Margin="282,473,0,0" VerticalAlignment="Top" Width="160" IsReadOnly="True"/>

        <Button Content="Buchung Hinzufügen" Click="bBuchungHinzufuegen_Click" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,690,0,0"/>
        <Button Content="Daten Aktualisieren" Click="bDatenAktualisieren_Click" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="618,690,0,0"/>
        <Button Content="Buchung Löschen" Click="bBuchungLoeschen_Click" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1131,690,0,0"/>

        <DataGrid x:Name="BuchungGridXAML" Margin="538,169,368,425" AutoGenerateColumns="True" />
    </Grid>
</mah:MetroWindow>
