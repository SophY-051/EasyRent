<mah:MetroWindow x:Class="EasyRentProj.KundenVerwaltung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRentProj"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="EasyRent Kundenverwaltung" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        TitleCharacterCasing="Normal">
    <Grid>
        
        <Label 
            Content="Kunden-ID" 
            HorizontalAlignment="Left" 
            Height="27" Margin="167,107,0,0" 
            VerticalAlignment="Top" Width="100"
        />
        
        <Label 
            Content="Vorname" 
            HorizontalAlignment="Left" 
            Height="27" 
            Margin="167,157,0,0" 
            VerticalAlignment="Top" 
            Width="100"
        />
        
        <Label 
            Content="Nachname" 
            HorizontalAlignment="Left" 
            Height="28" 
            Margin="167,207,0,0" 
            VerticalAlignment="Top" 
            Width="100"
        />
        
        <Label 
            Content="Nummer" 
            HorizontalAlignment="Left" 
            Margin="167,257,0,0" 
            VerticalAlignment="Top" 
            Width="100"
        />
        
        <Label 
            Content="Adresse" 
            HorizontalAlignment="Left" 
            Margin="167,307,0,0" 
            VerticalAlignment="Top" 
            Width="100"
        />
        
        <Label 
            Content="Email" 
            HorizontalAlignment="Left" 
            Height="26" 
            Margin="167,357,0,0" 
            VerticalAlignment="Top" 
            Width="100"
        />

        <TextBox 
            Controls:TextBoxHelper.ClearTextButton="True" 
            x:Name="tbKundenID" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="272,107,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="160" 
            IsReadOnly="True"
        />
        
        <TextBox 
            Controls:TextBoxHelper.ClearTextButton="True" 
            x:Name="tbVorname" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="272,157,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="160"
        />
        
        <TextBox 
            Controls:TextBoxHelper.ClearTextButton="True" 
            x:Name="tbNachname" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="272,207,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="160"
        />
        
        <TextBox 
            Controls:TextBoxHelper.ClearTextButton="True" 
            x:Name="tbNummer" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="272,257,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="160"
        />
        
        <TextBox 
            Controls:TextBoxHelper.ClearTextButton="True" 
            x:Name="tbAdresse" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="272,307,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="160"
        />
        
        <TextBox 
            Controls:TextBoxHelper.ClearTextButton="True" 
            x:Name="tbEmail" 
            HorizontalAlignment="Left" 
            Height="46" 
            Margin="272,357,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="160"
        />

        <Button 
            Content="Kunde Hinzufügen" 
            Click="bKundeHinzufuegen_Click" 
            Width="148" 
            Height="32" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="726,514,0,0"
        />
        
        <Button 
            Content="Daten Aktualisieren" 
            Click="bDatenAktualisieren_Click"
            Width="148" 
            Height="31"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="541,514,0,0"
        />
        
        <Button 
            Content="Kunde Löschen" 
            Click="bKundeLoeschen_Click" 
            Width="152"
            Height="32" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Margin="897,514,0,0"
        />

        <DataGrid 
            x:Name="KundenGridXAML" 
            Margin="574,216,254,240" 
            SelectionChanged="KundenGridXAML_SelectionChanged">

            <DataGrid.Columns>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</mah:MetroWindow>