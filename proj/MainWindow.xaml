<mah:MetroWindow  x:Class="EasyRentProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRentProj"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="EasyRent Login" Height="550" Width="375">
    <Grid>
        <Button Content="Log-In" Click="bLogIn" Margin="93,417,78,0" Height="26" VerticalAlignment="Top"/>

        <PasswordBox x:Name="pbPasswort" HorizontalAlignment="Left" Margin="93,328,0,0" VerticalAlignment="Top" Width="204" Height="1" RenderTransformOrigin="0.5,0.5" ></PasswordBox>
        <TextBlock HorizontalAlignment="Left" Margin="93,304,0,0" TextWrapping="Wrap" Text="Passwort" VerticalAlignment="Top" Height="18" Width="72"/>

        <TextBox x:Name="tbBenutzername" HorizontalAlignment="Left" Margin="93,260,0,0" VerticalAlignment="Top" Width="204" Height="1" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock HorizontalAlignment="Left" Margin="93,237,0,0" TextWrapping="Wrap" Text="Benutzer" VerticalAlignment="Top" Height="18" Width="56" RenderTransformOrigin="0.426,-0.351"/>

    </Grid>
</mah:MetroWindow>
