<mah:MetroWindow x:Class="EasyRentProj.Rueckgaben"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"         
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:EasyRentProj"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    mc:Ignorable="d"
    Title="EasyRent Rückgaben" Height="720" Width="1280"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    <Grid>
        <Label 
        Content="Buchungs ID" 
        HorizontalAlignment="Left" 
        Height="28"
        Margin="156,185,0,0"
        VerticalAlignment="Top"
        Width="100"
    />

    <Label
        Content="Kilometerstand"
        HorizontalAlignment="Left"
        Height="36"
        Margin="156,235,0,0" 
        VerticalAlignment="Top"
        Width="161"
    />

    <Label 
        Content="Tankstand" 
        HorizontalAlignment="Left" 
        Height="28" 
        Margin="156,297,0,0" 
        VerticalAlignment="Top"
        Width="100"
    />

    <Label 
        Content="Schäden" 
        HorizontalAlignment="Left" 
        Height="28"
        Margin="156,348,0,0" 
        VerticalAlignment="Top"
        Width="100"
    />

    <Label 
        Content="Bemerkungen" 
        HorizontalAlignment="Left"
        Height="28"
        Margin="156,397,0,0"
        VerticalAlignment="Top" 
        Width="100"
    />

    <Label 
        Content="Rückgabedatum" 
        HorizontalAlignment="Left"
        Height="28"
        Margin="156,447,0,0" 
        VerticalAlignment="Top"
        Width="100"
    />

    <ComboBox 
        x:Name="cbBuchungAuswahl" 
        HorizontalAlignment="Left" 
        Height="22" 
        Margin="316,187,0,0" 
        VerticalAlignment="Top"
        Width="111"
        DisplayMemberPath="buchungID"
    />

    <TextBox
        x:Name="tbKilometerstand" 
        HorizontalAlignment="Left"
        Height="28"
        Margin="317,235,0,0"
        VerticalAlignment="Top"
        Width="110"
    />

    <TextBox
     x:Name="tbTankstand" 
     HorizontalAlignment="Left" 
     Margin="317,296,0,0" 
     VerticalAlignment="Top" 
     Width="110" Height="15"
     />

    <TextBox
        x:Name="tbSchaeden" 
        HorizontalAlignment="Left" 
        Height="23" 
        Margin="316,348,0,0" 
        VerticalAlignment="Top" 
        Width="111"
    />

    <TextBlock
        x:Name="tbBemerkungen"
        HorizontalAlignment="Left"
        Height="23"
        Margin="316,399,0,0" 
        VerticalAlignment="Top" 
        Width="111"
    />

        <DatePicker 
        Name="dpRueckgabeDatum" 
        HorizontalAlignment="Left"
        Height="22" 
        Margin="317,448,0,0" 
        VerticalAlignment="Top"
        Width="111"
    />

        <Button 
        Content="Rückgabe Hinzufügen"
        Click="bRueckgabeHinzufuegen_Click"
        Width="132" 
        Height="36" 
        HorizontalAlignment="Left"
        VerticalAlignment="Top" 
        Margin="512,499,0,0"
    />

    <Button 
        Content="Daten Aktualisieren"
        Click="bDatenAktualisieren_Click"
        Width="132"
        Height="36" 
        HorizontalAlignment="Left" 
        VerticalAlignment="Top"
        Margin="722,498,0,0"
    />

    <Button 
        Content="Rückgabe Löschen" 
        Click="bRueckgabeLoeschen_Click" 
        Width="132" 
        Height="37" 
        HorizontalAlignment="Left"
        VerticalAlignment="Top" 
        Margin="934,498,0,0"
    />

    <DataGrid 
        x:Name="RueckgabeGridXAML"
        Margin="512,143,182,230"
        SelectionChanged="RueckgabeGridXAML_SelectionChanged"
    >
        <DataGrid.Columns>
        </DataGrid.Columns>
    </DataGrid>
    </Grid>
</mah:MetroWindow>